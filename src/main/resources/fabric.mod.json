{
  "schemaVersion": 1,
  "id": "hcscr",
  "version": "${version}",
  "name": "HCsCR",
  "description": "Remove your end crystals before the server even knows you hit 'em!",
  "authors": [
    "VidTu"
  ],
  "contributors": [
    "Offenderify"
  ],
  "contact": {
    "homepage": "https://github.com/VidTu/HCsCR",
    "sources": "https://github.com/VidTu/HCsCR",
    "issues": "https://github.com/VidTu/HCsCR/issues",
    "email": "pig@vidtu.ru",
    "discord": "https://discord.gg/Q6saSVSuYQ"
  },
  "license": "Apache-2.0",
  "icon": "hcscr.png",
  "environment": "client",
  "entrypoints": {
    "client": [
      "ru.vidtu.hcscr.platform.HFabric"
    ],
    "modmenu": [
      "ru.vidtu.hcscr.platform.HModMenu"
    ]
  },
  "mixins": [
    {
      "config": "hcscr.mixins.json",
      "environment": "client"
    }
  ],
  "depends": {
    "minecraft": "${minecraft}",
    "fabric-key-binding-api-v1": "*",
