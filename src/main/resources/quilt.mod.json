{
  "schema_version": 1,
  "quilt_loader": {
    "group": "ru.vidtu.hcscr",
    "id": "hcscr",
    "version": "${version}",
    "metadata": {
      "name": "HCsCR",
      "description": "Remove your end crystals before the server even knows you hit 'em!",
      "license": "Apache-2.0",
      "contributors": {
        "VidTu": "Owner",
        "Offenderify": "Author",
        "libffi": "Contributor"
      },
      "contact": {
        "homepage": "https://github.com/VidTu/HCsCR",
        "sources": "https://github.com/VidTu/HCsCR",
        "issues": "https://github.com/VidTu/HCsCR/issues",
        "email": "pig@vidtu.ru",
        "discord": "https://discord.gg/Q6saSVSuYQ"
      },
      "icon": "hcscr.png"
    },
    "intermediate_mappings": "net.fabricmc:intermediary",
    "depends": [
      {
        "id": "minecraft",
        "versions": "${minecraft}",
        "reason": "HCsCR works only with Minecraft ${minecraft}."
      },
      {
        "id": "fabric-key-binding-api-v1",
        "versions": "*",
        "reason": "HCsCR requires Fabric API (or QFAPI/QSL) to properly implement its functionality."
      },
      {
        "id": "fabric-lifecycle-events-v1",
        "versions": "*",
        "reason": "HCsCR requires Fabric API (or QFAPI/QSL) to properly implement its functionality."
      },
      {
        "id": "fabric-networking-api-v1",
        "versions": "*",
        "reason": "HCsCR requires Fabric API (or QFAPI/QSL) to properly implement its functionality."
      },
      {
        "id": "fabric-rendering-v1",
        "versions": "*",
        "reason": "HCsCR requires Fabric API (or QFAPI/QSL) to properly implement its functionality."
      },
      {
        "id": "fabric-resource-loader-${fabricResourceLoader}",
        "versions": "*",
        "reason": "HCsCR requires Fabric API (or QFAPI/QSL) to properly implement its functionality."
      },
      {
        "id": "fabric",
        "versions": "*",
        "reason": "HCsCR requires Fabric API (or QFAPI/QSL) to properly implement its functionality.",
        "optional": true
      },
      {
        "id": "modmenu",
        "versions": "*",
        "reason": "HCsCR recommends installing ModMenu to use the configuration screen.",
        "optional": true
      }
    ],
    "entrypoints": {
      "client": "ru.vidtu.hcscr.platform.HFabric",
      "modmenu": "ru.vidtu.hcscr.platform.HModMenu"
    }
  },
  "minecraft": {
    "environment": "client"
  },
  "mixin": {
    "config": "hcscr.mixins.json",
    "environment": "client"
  },
  "modmenu": {
    "links": {
      "modmenu.github_releases": "https://github.com/VidTu/HCsCR/releases",
      "modmenu.discord": "https://discord.gg/Q6saSVSuYQ"
    }
  },
  "catalogue": {
    "icon": {
      "image": "hcscr_64.png",
      "item": "minecraft:end_crystal"
    },
    "banner": "hcscr_240.png"
  }
}
